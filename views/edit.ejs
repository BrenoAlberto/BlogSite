<% include ./inc/header %>
    <div class="ui main text container segment">
        <div class="ui huge header">Editar
            <%=blog.title%>
        </div>
        <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Titulo</label>
                <input type="text" name="blog[title]" value="<%=blog.title%>">
            </div>
            <div class="field">
                <label>Imagem</label>
                <input type="text" name="blog[image]" value="<%=blog.image%>">
            </div>
            <div class="field">
                <label>Conteudo</label>
                <textarea name="blog[body]"><%=blog.body%></textarea>
            </div>
            <input class="ui big basic button violet" type="submit">
        </form>
    </div>
<% include ./inc/footer %>